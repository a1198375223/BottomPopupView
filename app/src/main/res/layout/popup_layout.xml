<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196.66dp"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:id="@+id/main_container">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:id="@+id/main_bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_container"
        android:layout_marginTop="31.33dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/live_container">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_bg_beganplay"
                android:id="@+id/bg_live_iv"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_icon_beganplay"
                android:id="@+id/live_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black_trans_50"
                android:layout_below="@+id/bg_live_iv"
                android:layout_centerHorizontal="true"
                android:text="开始"
                android:id="@+id/live_text"/>

        </RelativeLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_container">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_bg_video"
                android:id="@+id/bg_video_iv"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_icon_video"
                android:id="@+id/video_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black_trans_50"
                android:layout_below="@+id/bg_video_iv"
                android:layout_centerHorizontal="true"
                android:text="结束"
                android:id="@+id/video_text"/>

        </RelativeLayout>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_container">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_bg_radio"
                android:id="@+id/bg_radio_iv"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_icon_radio"
                android:id="@+id/radio_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black_trans_50"
                android:layout_below="@+id/bg_radio_iv"
                android:layout_centerHorizontal="true"
                android:text="视频"
                android:id="@+id/radio_text"/>

        </RelativeLayout>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_container">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_bg_dynamic"
                android:id="@+id/bg_feed_iv"/>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/milive_beginplay_icon_dynamic"
                android:id="@+id/feed_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/black_trans_50"
                android:layout_below="@+id/bg_feed_iv"
                android:layout_centerHorizontal="true"
                android:text="我的"
                android:id="@+id/feed_text"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/milive_beginplay_closed_normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_container"
        android:layout_marginTop="26.66dp"
        android:id="@+id/close_iv"/>
</RelativeLayout>